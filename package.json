{
  "name": "mochi-ui",
  "version": "2.0.0",
  "description": "Premium Terminal-Style UI for system monitoring, file exploration, and advanced system diagnostics.",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --remote-debugging-port=9222",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish never",
    "build:msi": "electron-builder --win msi",
    "build:nsis": "electron-builder --win nsis",
    "dist": "electron-builder -p always"
  },
  "keywords": [
    "system-monitor",
    "terminal-ui",
    "file-explorer",
    "electron",
    "dashboard"
  ],
  "author": "Mochi-UI Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "node-os-utils": "^1.3.1"
  },
  "build": {
    "appId": "com.mochiui.app",
    "productName": "Mochi-UI",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "script.js",
      "style.css",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mochi-UI"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}